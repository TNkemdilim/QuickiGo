@{
    ViewBag.Title = "Home Page";
}

<div class="inner-body">
    <div class="col-md-3 sidebar">
        <div class="spacing">
            <a>QuickiGo</a>
            <br />
            <i><small>Your best letter drafter...</small></i>
        </div>
        <hr />
        <div class="form-group">
            <label>Full name:</label>
            <br />
            <input class="form-control input-sm" type="text" id="form-fullname" placeholder="Fullname" />
        </div>

        <div class="form-group">
            <label>Purpose of letter:</label>
            <br />
            <textarea class="form-control input-sm" type="text" id="form-purpose-of-letter" placeholder="Purpose of letter" rows="3"></textarea>
        </div>

        <div class="form-group">
            <label>Your Address:</label>
            <br />
            <textarea class="form-control input-sm" type="text" id="form-sender-address" placeholder="Your Address" rows="3"></textarea>
        </div>

        <div class="form-group">
            <label>Recipient Address:</label>
            <br />
            <textarea class="form-control input-sm" type="text" id="form-recipient-address" placeholder="Sender Address" rows="3"></textarea>
        </div>

        <div class="form-group">
            <input class="" type="checkbox" id="form-parent-consent" />
            <label>My parents are aware.</label>
        </div>

        <div class="form-group">
            <label>Parent Phone number:</label>
            <br />
            <input class="form-control input-sm" type="text" id="form-parent-phone-no" placeholder="Parent Phone number" />
        </div>

        <div class="form-group">
            <label>Any document of proof:</label>
            <br />
            <input class="form-control btn btn-warning btn-sm input-sm" id="form-proof-document" type="file" value="Proof document" />
        </div>

        <input class="btn btn-lg btn-success pull-right" type="button" value="Print" />
        <br />
        <br />
    </div>

    <div class="col-md-9 letter-content">
        @*Senders Address*@
        <div class="row">
            <p class="pull-right letter-sender-address">
                Room F406 Peter Hall,<br />
                Covenant University,<br />
                Canaanland,<br />
                Ota,<br />
                Ogun State.<br />
            </p>
        </div>

        <br /><br />

        @*Recipients Address and Dear Sir*@
        <div class="row">
            <p class="pull-left letter-recipient-address">
                <strong>The Dean of Student Affairs,</strong><br />
                Covenant University,<br />
                Canaanland,<br />
                Ota,<br />
                Ogun State.<br /><br />
            </p>
            <div>
                &emsp;&emsp;<strong>Dear Sir/Ma</strong>,
            </div>
        </div>

        @*Letter Title*@
        <div class="row">
            <p class="text-center">
                <u><strong class="letter-title">Application for Exeat</strong></u>
            </p>
        </div>

        @*Body of letter*@
        <div class="row">
            <p>
                &emsp;&emsp;I <a class="letter-data letter-fullname">John Doe</a>, with matric number <a class="letter-data letter-matric-number">15XXXXXX</a>
                from The Department of <a class="letter-data letter-department-name">XXXXXXX</a>, humbly write to apply for
                <a class="letter-data letter-type">exeat</a> on the @DateTime.Now.DayOfWeek @DateTime.Now.Day, @DateTime.Now.Year.
            </p>
            <p>
                &emsp;&emsp;The purpose of this <a class="letter-data letter-title">exeat</a> is
                <a class="letter-data letter-purpose">enable me purchase necessary items for the completion of my final year project </a>.
                <a class="letter-data letter-parent-consent">Prior to this, I humbly note that my parent are aware of my action.</a>
            </p>

            <p>
                &emsp;&emsp;I'll be grateful if this <a class="letter-data" id="letter-type">exeat</a> is honored in due time.
                <br /><br />
                Thank you as I anticipate a positive response.
            </p>
        </div>

        @*Conclusion*@
        <div class="row pull-right">
            Yours Sincerely,<br />
            <br /><br />
            <a class="letter-data letter-fullname">John Doe</a>.
        </div>
    </div>
</div>